        "noEmitOnError": true,
        "noImplicitAny": true,
        "outDir": "./app/build",
        "removeComments": true,
        "target": "ES6",
        "module": "CommonJS",
        "strict": true,
        "moduleResolution": "node",
        "noImplicitThis": true
    },
    "include": ["app/src/**/*"]
}